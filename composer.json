{
    "name": "rampage-php/framework",
    "description": "Rampage PHP Framework",
    "license": "GPL-3.0",
    "keywords": ["framework", "zf2", "rampage"],
    
    "authors": [
        { "name": "Axel H.", "email": "rampagephp@linux-rampage.org", "role": "developer" }
    ],
    
    "support": {
        "issues": "https://github.com/tux-rampage/rampage-php/issues",
        "wiki": "https://github.com/tux-rampage/rampage-php/wiki"
    },
    
    "repositories": [
        {"type": "composer", "url": "https://packages.zendframework.com/" }
    ],

    "require" : {
        "zendframework/zendframework": "~2.1.0"
    },
    
    "suggest": {
        "rampage-php/composer-module-installer": "Allow installing application modules via composer",
        "rampage-php/dev-tools": "Integration of DB profiling for Zend Developer Tools"
    },
    
    "autoload": {
        "classmap": ["library/"]
    },
    
    "bin": ["tools/generate-di.php"]
}